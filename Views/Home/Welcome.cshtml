@{
    ViewData["Title"] = "Chào mừng";
    var userName = ViewBag.UserName as string ?? "bạn";
    var role = ViewBag.Role as string ?? "thành viên";
}

<div class="welcome-card text-center py-5">
    <h2 class="fw-bold mb-3">Chào mừng @userName đến với Demo Project</h2>
    <p class="lead">Hiện bạn đang là <strong>@role</strong> của chúng tôi.</p>
    <a class="btn btn-outline-primary mt-4" asp-controller="Home" asp-action="Index">Quay về trang chủ</a>
</div>