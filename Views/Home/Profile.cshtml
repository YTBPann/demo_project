@{
    ViewData["Title"] = "Trang cá nhân";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">Thông tin cá nhân</h2>
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
        <div class="text-center mb-4">
            <img src="@ViewBag.Picture" alt="Avatar" class="rounded-circle shadow-sm" width="120" height="120" />
            <h4 class="mt-3 fw-bold">@ViewBag.UserName</h4>
            <p class="text-muted">@ViewBag.Email</p>
            <span class="badge bg-primary">@ViewBag.Role</span>
            <br />
            <small class="text-muted">Đăng nhập qua: @ViewBag.Provider</small>
        </div>

        <hr />

        <form asp-action="UpdateDisplayName" method="post" class="text-center">
            <div class="mb-3">
                <label for="newName" class="form-label fw-semibold">Tên hiển thị mới:</label>
                <input type="text" name="newName" id="newName" class="form-control" placeholder="Nhập tên mới..." required />
            </div>
            <button type="submit" class="btn btn-success px-4">Cập nhật</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3">@ViewBag.Message</div>
        }
    </div>
</div>
