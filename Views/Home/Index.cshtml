@{
    ViewData["Title"] = "Trang chủ";
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
}

<div class="home-hero text-center py-5">
    <h1 class="display-5 fw-bold mb-3">Chào mừng bạn đến với Demo Project</h1>
    <p class="lead text-muted mb-5">Chọn một trong các nền tảng dưới đây để đăng nhập.</p>

    <div class="auth-options d-flex justify-content-center flex-wrap gap-4">

        <a asp-controller="Account" asp-action="Login" class="auth-card google text-decoration-none"">
            <img src="~/images/github.png" alt="Github" width="64" height="64" style="border-radius: 12px;" />
            <span class="auth-card__label">Đăng nhập bằng GitHub</span>
        </a>

        <a asp-controller="Account" asp-action="Login" class="auth-card google text-decoration-none"">
            <img src="~/images/facebook.png" alt="Facebook" width="64" height="64" style="border-radius: 12px;" />
            <span class="auth-card__label">Đăng nhập bằng Facebook</span>
        </a>

        <a asp-controller="Account" asp-action="Login" class="auth-card google text-decoration-none">
            <img src="~/images/google.png" alt="Google" width="64" height="64" style="border-radius: 12px;" />
            <span class="auth-card__label">Đăng nhập bằng Google</span>
        </a>

        <div class="auth-card facebook disabled">
            <img src="~/images/microsoft.png" alt="Microsoft" width="64" height="64" style="border-radius: 12px;" />
            <span class="auth-card__label">Microsoft</span>
            <small class="text-muted">Sắp ra mắt</small>
        </div>

        <div class="auth-card facebook disabled">
            <img src="~/images/discord.png" alt="Discord" width="64" height="64" style="border-radius: 12px;" />
            <span class="auth-card__label">Discord</span>
            <small class="text-muted">Sắp ra mắt</small>
        </div>
    </div>

    @if (isAuthenticated)
    {
        <div class="mt-5">
            <p class="text-muted mb-3">Bạn đã đăng nhập với tên <strong>@User.Identity?.Name</strong>.</p>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Welcome">Đi đến trang chào mừng</a>
        </div>
    }
    else
    {
        <p class="text-muted mt-5">Nhấn vào biểu tượng để đăng nhập và bắt đầu trải nghiệm.</p>
    }
</div>