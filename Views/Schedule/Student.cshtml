@model IEnumerable<OpenIDApp.Models.Exam>
@{
    ViewData["Title"] = "Lịch thi của tôi";
}
<h2 class="mb-3">Lịch thi của tôi</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Bạn chưa có kỳ thi nào được đăng ký.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Môn học</th>
                <th>Phòng thi</th>
                <th>Ngày thi</th>
                <th>Thời lượng</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Subject?.Name</td>
                <td>@e.Room?.Name</td>
                <td>@e.Date.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                <td>@e.DurationMinutes phút</td>
            </tr>
        }
        </tbody>
    </table>
}
